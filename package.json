{
  "name": "animated-spork",
  "version": "0.0.1",
  "description": "Building an opinionated template on top of unopinionated Express",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/shared",
    "packages/app",
    "dev-app"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "npm run test:shared && npm run test:app",
    "test:shared": "mocha --recursive \"packages/shared/tests/**/*.spec.js\" --exit",
    "test:app": "mocha --recursive \"packages/app/tests/**/*.spec.js\" --exit",
    "coverage:shared": "c8 --report-dir=packages/shared/coverage --reporter=lcov --reporter=text-summary mocha --recursive \"packages/shared/tests/**/*.spec.js\" --exit",
    "coverage:app": "c8 --report-dir=packages/app/coverage --reporter=lcov --reporter=text-summary mocha --recursive \"packages/app/tests/**/*.spec.js\" --exit",
    "coverage": "npm run coverage:shared && npm run coverage:app"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [],
  "author": "Jeff Caradona <jeffcaradona@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "c8": "^10.1.3",
    "chai": "^6.2.2",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-mocha": "^11.2.0",
    "eslint-plugin-n": "^17.23.2",
    "mocha": "^12.0.0-beta-8",
    "node-forge": "^1.3.3",
    "nodemon": "^3.1.11",
    "sinon": "^21.0.1",
    "supertest": "^7.2.2"
  }
}
