{
  "name": "animated-spork",
  "version": "0.0.1",
  "description": "Building an opinionated template on top of unopinionated Express",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/shared-core",
    "packages/frontend-core",
    "packages/api-core",
    "apps/demo-web",
    "apps/demo-api"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:shared-core": "mocha --recursive \"packages/shared-core/tests/**/*.spec.js\" --exit",
    "coverage:shared-core": "c8 --report-dir=packages/shared-core/coverage --reporter=lcov --reporter=text-summary mocha --recursive \"packages/shared-core/tests/**/*.spec.js\" --exit",
    "test:api-core": "mocha --recursive \"packages/api-core/tests/**/*.spec.js\" --exit",
    "coverage:api-core": "c8 --report-dir=packages/api-core/coverage --reporter=lcov --reporter=text-summary mocha --recursive \"packages/api-core/tests/**/*.spec.js\" --exit"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [],
  "author": "Jeff Caradona <jeffcaradona@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@jeffcaradona/eslint-plugin-eta": "^0.3.0",
    "chai": "^6.2.2",
    "cross-env": "^10.1.0",
    "c8": "^10.1.3",
    "eslint": "^10.0.0",
    "eslint-plugin-mocha": "^11.2.0",
    "eslint-plugin-n": "^17.23.2",
    "mocha": "^12.0.0-beta-8",
    "nodemon": "^3.1.11",
    "sinon": "^21.0.1",
    "supertest": "^7.2.2"
  }
}
